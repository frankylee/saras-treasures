@model ContactForm

@{
    ViewData["Title"] = "Contact Us";
}



<h1>Send a message</h1>


<section class="row">

    <form method="post" class=" col-md-8 my-5">
        <div class="form-group">
            <label class="sr-only">Name</label>
            <input type="text" asp-for="Name" class="form-control form-control-lg" placeholder="Name" required>
        </div>
        <div class="form-group">
            <label class="sr-only">Company</label>
            <input type="text" asp-for="Company" class="form-control form-control-lg" placeholder="Company">
        </div>
        <div class="form-group">
            <label class="sr-only">Email</label>
            <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Email" required>
        </div>
        <div class="form-group">
            <label class="sr-only">Phone</label>
            <input type="tel" asp-for="Phone" class="form-control form-control-lg" placeholder="Phone">
        </div>
        <div class="form-group mb-4">
            <label class="sr-only">Message</label>
            <textarea asp-for="Message" class="form-control form-control-lg" rows="8" placeholder="Message" required></textarea>
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Send</button>
    </form>


    <aside class="col-md-4 my-5">
        <div id="address-physical" class="mb-5">
            <h2>Visit our location</h2>
            <div>
                <strong>Gift &amp; Thrift Shop + Adoption Center</strong><br />
                871 River Road<br />
                Eugene, OR 97404<br />
                541-607-8892
            </div>
        </div>


        <div id="contact-team" class="mb-5">
            <h2>Reach our team</h2>
            <ul id="staff-list">
                <li class="staff-contact">
                    <strong>Melinda McCormick</strong><br />
                    Executive Director<br />
                    office@sarastreasures.org
                </li>
                <li class="staff-contact">
                    <strong>Nicole West</strong><br />
                    Cat Rescue Coordinator<br />
                    office@sarastreasures.org
                </li>
                <li class="staff-contact">
                    <strong>Kelly Coulter</strong><br />
                    Webmaster<br />
                    webmaster@sarasavesanimals.org
                </li>
            </ul>
        </div>


        <div id="address-mailing" class="mb-5">
            <h2>Send mail</h2>
            <div>
                <strong>Shelter Animal Resource Alliance</strong><br />
                PO Box 41462<br />
                Eugene, OR 97404
            </div>
        </div>
    </aside>


</section>